<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ismail.discreteproblems.Set_Activity"
    android:background="#ffffff">


    <EditText
        android:id="@+id/et1"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="Enter Set A   (Use ',' to seperate)"
        android:inputType="text"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/et2"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="Enter Set B   (Use ',' to seperate)"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/Unionbuttonid"
        android:textSize="17sp"
        android:text="@string/ut"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/rbuni"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/Intersectionbuttonid"
        android:textSize="17sp"
        android:text="@string/it"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rbin"
        />

    <Button
        android:id="@+id/Differencebuttonid"
        android:textSize="17sp"
        android:text="@string/dt"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rbdiff"

        />

    <Button
        android:id="@+id/cardinality1buttonid"
        android:textSize="17sp"
        android:text="@string/c1t"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rbc1"
        />

    <Button
        android:id="@+id/cardinality2buttonid"
        android:textSize="17sp"
        android:text="@string/c2t"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/rbc2"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="#ffffff"
        android:id="@+id/resultid"
        />

    <Button
        android:id="@+id/vennbuttonid"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/vt"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/rbven"
        android:onClick="VennDiagram"
        />


</LinearLayout>